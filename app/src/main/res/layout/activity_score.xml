<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#201A30"
    android:gravity="center"
    android:layout_gravity="center"
    tools:context=".ScoreActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="300sp"
        android:layout_marginBottom="20sp"
        android:src="@drawable/ppl" />

    <TextView
        android:id="@+id/textCongo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:fontFamily="@font/alex"
        android:gravity="center"
        android:letterSpacing="0.10"
        android:text="Congrats! Himanshu"
        android:textColor="#0CF4E3"
        android:textSize="32sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textComplete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textCongo"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:text="You've successfully completed a quiz"
        android:textColor="#bbbbbb"
        android:textSize="22sp" />


    <TextView
        android:id="@+id/textYourScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textComplete"
        android:layout_marginTop="40sp"
        android:gravity="center"
        android:letterSpacing="0.10"
        android:text="YOUR SCORE"
        android:textColor="#999999"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textYourScore"
        android:gravity="center"
        android:letterSpacing="0.20"
        android:text="4/5"
        android:textColor="#0CF4E3"
        android:textSize="52sp"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/homeBtn"
        android:layout_below="@id/textScore"
        android:layout_width="250sp"
        android:layout_height="80sp"
        android:layout_gravity="center"
        android:layout_marginTop="40sp"
        android:layout_marginBottom="40sp"
        android:backgroundTint="#0CF4E3"
        android:elevation="30sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:letterSpacing="0.05"
        android:text="Back to Home"
        android:textColor="#333333"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="50sp" />

</RelativeLayout>